- if @user.active_clock?

  = simple_form_for @time_log, url: time_log_path(@user.time_logs.first), remote: true, defaults: {label: false, input_html: {class: 'form-control bottom-10px'}} do |f|
    .form-inputs
      .elapsed-time This is where the elapsed time will be
      = f.input :id, required: true, as: :hidden
    .form-actions.top-20px= f.submit 'Clock out', class: 'btn btn-primary btn-md'

- else

  = simple_form_for 'edit_time_log', url: '', remote: true, defaults: {label: false, input_html: {class: 'form-control bottom-10px'}} do |f|
    .form-inputs
      .elapsed-time This is where the elapsed time will be
      = f.input :id, required: true, as: :hidden
    .form-actions.top-20px= f.submit 'Clock out', class: 'btn btn-primary btn-md'