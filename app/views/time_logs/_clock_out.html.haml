= simple_form_for @user.time_logs.first, url: time_log_path(@user.time_logs.first), remote: true, defaults: {label: false, input_html: {class: 'form-control bottom-10px'}} do |f|
  .form-inputs
    .elapsed-time{data: {elapsed: (Time.now.to_i - @user.time_logs.first.clock_in.to_i).round}} 00:00:00
    = f.input :id, required: true, as: :hidden
  .form-actions.top-20px= f.submit 'Clock out', class: 'btn btn-primary btn-md'