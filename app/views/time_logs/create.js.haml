:plain
  // Alert
  $('.ajax').removeClass('alert-success').removeClass('alert-danger')
  $('.ajax').addClass('alert-#{@message[:type]}')
  $('.alert-content').html('#{@message[:text]}')
  $('.ajax').velocity('transition.slideDownIn', 400);

- if @message[:type] == 'success'
  :plain
    // Transition forms
    $('.clock_in').velocity('transition.slideDownOut', 400);
    $('.clock_out').delay(400).velocity('transition.slideUpIn', 400);

    // Build clock out form
    string =  ''
    string += "<form action='/time_logs/#{@time_log.id}' class='edit_time_log' data-remote='true' id='edit_time_log_#{@time_log.id}' method='post'>"
    string +=   "<div style='display:none'>"
    string +=     "<input name='_method' type='hidden' value='patch'>"
    string +=   "</div>"
    string +=   "<div class='form-inputs'>"
    string +=     "<div class='elapsed-time'>"
    string +=       "This is where the elapsed time will be."
    string +=     "</div>"
    string +=     "<div class='input hidden time_log_id'>"
    string +=       "<input aria-required='true' class='hidden form-control bottom-10px' id='time_log_id' name='time_log[id]' required='required' type='hidden' value= '#{@time_log.id}'>"
    string +=     "</div>"
    string +=   "</div>"
    string +=   "<div class='form-actions top-20px'>"
    string +=   "<input class='btn btn-primary btn-md' name='commit' type='submit' value='Clock out'>"
    string +=   "</div>"
    string += "</form>"
    $('.clock_out .panel-body').html(string)